{
  "name": "saucedemo_automation",
  "version": "1.0.0",
  "description": "",
  "main": "cypress.config.js",
  "type": "commonjs",
  "scripts": {
    "cy:run": "npx cypress run",
    "cleanup:reports": "rimraf cypress/reports allure-results",
    "merge:reports": "npx mochawesome-merge cypress/reports/mochawesome-report/*.json -o cypress/reports/report.json",
    "generate:report": "npx marge cypress/reports/report.json -f final-report -o cypress/reports --inline",
    "report:all": "npm run cleanup:reports && npm run cy:run && npm run merge:reports && npm run generate:report && npm run allure:generate",
    "cypress:open:dev": "cross-env NODE_ENV=development npx cypress open",
    "cypress:open:staging": "cross-env NODE_ENV=staging npx cypress open",
    "cypress:open:prod": "cross-env NODE_ENV=production npx cypress open",
    "cypress:run:dev": "cross-env NODE_ENV=development npx cypress run",
    "cypress:run:staging": "cross-env NODE_ENV=staging npx cypress run",
    "cypress:run:prod": "cross-env NODE_ENV=production npx cypress run",
    "allure:report": "allure generate allure-results --clean -o cypress/reports/allure-report && allure open cypress/reports/allure-report",
    "allure:generate": "allure generate allure-results --clean -o cypress/reports/allure-report",
    "allure:combine": "allure-single-html-file-js -d cypress/reports/allure-report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harryBro26/Internship-Automation.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/harryBro26/Internship-Automation/issues"
  },
  "homepage": "https://github.com/harryBro26/Internship-Automation#readme",
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "allure-commandline": "^2.36.0",
    "allure-cypress": "^3.4.5",
    "allure-single-html-file-js": "^0.0.6",
    "cross-env": "^10.1.0",
    "cypress": "^15.7.1",
    "dotenv": "^17.2.3",
    "mocha": "^11.7.5",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.1.0",
    "mochawesome-report-generator": "^6.3.2",
    "rimraf": "^6.1.2"
  }
}
